{
  "expo": {
    "name": "LitFinance",
    "slug": "LitFinance-Mobile",
    "scheme": "litfinance",
    "version": "1.0.0",
    "sdkVersion": "54.0.0",
    "orientation": "portrait",
    "icon": "./assets/litfinance-app-icon-white-1024.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/litfinance-app-icon-white-1024.png",
      "resizeMode": "cover",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/litfinance-app-icon-white-1024.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "useNextNotificationsApi": true,
      "package": "com.litfinance.app",
      "intentFilters": [
        {
          "action": "VIEW",
          "category": ["BROWSABLE", "DEFAULT"],
          "data": [{ "scheme": "litfinance" }]
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon-512.png"
    },
    "plugins": [
      [
        "expo-notifications",
        {
          "icon": "./assets/litfinance-app-icon-white-1024.png",
          "color": "#ffffff"
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "0fb5f630-9735-4a95-8227-f88e26be48a4"
      },
      "API_BASE_URL": "https://litfinance-api-production.up.railway.app"
    }
  }
}
